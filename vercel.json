{
    "builds": [
        {
            "src": "mynotes/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "staticfiles" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "mynotes/wsgi.py"
        },
        {
            "src": "/frontend/build/static/(.*)",
            "dest": "mynotes/static/$1"
        }
    ]
}
